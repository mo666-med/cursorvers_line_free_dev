            {
              "type": "box",
              "layout": "baseline",
              "margin": "lg",
              "contents": [
                {
                  "type": "text",
                  "text": "PW",
                  "color": "#FF9DF7",
                  "weight": "bold",
                  "flex": 0
                },
                {
                  "type": "text",
                  "text": "17171baa",
                  "color": "#FFFFFF",
                  "weight": "bold",
                  "margin": "md"
                }
              ]
            }
          ]
        },
        {
          "type": "button",
          "style": "primary",
          "color": "#C045FF",
          "action": {
            "type": "uri",
