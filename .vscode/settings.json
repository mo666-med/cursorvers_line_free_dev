{
  // Git Graphの表示設定
  "git-graph.openRepoInsteadOfRefresh": true,
  "git-graph.maxDepthOfRepoSearch": 3,
  
  // サイドバーの表示設定
  "workbench.sideBar.location": "left",
  
  // ターミナルの配置設定
  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": "never",
  
  // エディタのレイアウト設定
  "workbench.editor.splitInGroupLayout": "horizontal",
  
  // パネルのサイズ設定
  "workbench.panel.bottom.size": 300,
  
  // チャットパネルの設定（Cursor固有）
  // 注意: Cursorのチャット欄は独立したパネルなので、ターミナルを直接表示することはできません
  // 代わりに、ターミナルをチャット欄の下に配置する設定を推奨します
  
  // 拡張機能の推奨設定
  "extensions.recommendations": [
    "mhutchie.git-graph"
  ],
  
  // カスタムビューの設定
  "workbench.view.customizations": {
    "workbench.view.git": {
      "visible": true,
      "location": "left"
    }
  }
}

